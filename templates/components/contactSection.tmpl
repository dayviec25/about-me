{{ define "contact" }}
<div class="bg-blue-700 rounded-lg text-white">
    <div class="flex flex-col p-4 items-center justify-between">
        <div class="flex items-center mb-4 md:mb-0">
            <img class="w-24 h-24 rounded-full mr-4" src="{{ .ProfilePictureURL }}" alt="Profile Picture">
            <div>
                <h2 class="text-2xl font-bold">{{ .Name }}</h2>
                <p class="text-xl">Let's connect and discuss oppourinties together</p>
            </div>
        </div>
        <div>
            <a href="{{ .CallToActionLink }}" class="inline-block bg-white text-blue-700 font-bold rounded-lg w-full px-6 py-2 hover:bg-gray-100">Book a meeting</a>
        </div>
    </div>
    <div class="flex justify-center space-x-4 mt-4 py-4 border-t border-gray-200">
        <a href="{{ .GithubLink }}" class="hover:text-gray-300">GitHub</a>
        <a href="{{ .LinkedInLink }}" class="hover:text-gray-300">LinkedIn</a>
        <a href="{{ .TwitterLink }}" class="hover:text-gray-300">Twitter</a>
        <a href="{{ .EmailLink }}" class="hover:text-gray-300">Email</a>
    </div>
</div>
{{ end }}
